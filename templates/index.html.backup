<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Company Teardown Generator</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h2 class="mb-0">Company Teardown Generator</h2>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-outline-light active" id="singleModeBtn">Single</button>
                                <button type="button" class="btn btn-outline-light" id="batchModeBtn">Batch</button>
                                <button type="button" class="btn btn-outline-light" id="csvModeBtn">CSV</button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Single Company Mode -->
                        <div id="singleMode">
                            <form id="singleForm">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="singleCompanyName" class="form-label">Company Name</label>
                                            <input type="text" class="form-control" id="singleCompanyName" required placeholder="e.g., Solestial">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label for="singleCompanyUrl" class="form-label">Company Website</label>
                                            <input type="url" class="form-control" id="singleCompanyUrl" required placeholder="https://example.com">
                                        </div>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-lg w-100" id="singleSubmitBtn">Generate Teardown</button>
                            </form>
                        </div>

                        <!-- Batch Mode -->
                        <div id="batchMode" style="display: none;">
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <label class="form-label mb-0">Companies to Process</label>
                                    <div>
                                        <button type="button" class="btn btn-outline-primary btn-sm" id="addCompanyBtn">+ Add Company</button>
                                        <button type="button" class="btn btn-outline-secondary btn-sm" id="clearAllBtn">Clear All</button>
                                    </div>
                                </div>
                                <div id="companiesList" class="border rounded p-3" style="min-height: 120px; max-height: 300px; overflow-y: auto;">
                                    <!-- Company entries will be added here -->
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="concurrencyLimit" class="form-label">Max Concurrent Jobs</label>
                                    <select class="form-select" id="concurrencyLimit">
                                        <option value="1">1 (Sequential)</option>
                                        <option value="2" selected>2 (Recommended)</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Options</label>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="autoRedirect" checked>
                                        <label class="form-check-label" for="autoRedirect">Auto-redirect when complete</label>
                                    </div>
                                </div>
                            </div>
                            <button type="button" class="btn btn-success btn-lg w-100" id="batchSubmitBtn" disabled>Start Batch Processing</button>
                        </div>

                        <!-- CSV Upload Mode -->
                        <div id="csvMode" style="display: none;">
                            <div class="mb-3">
                                <label for="csvFile" class="form-label">Upload CSV File</label>
                                <input type="file" class="form-control" id="csvFile" accept=".csv">
                                <div class="form-text">
                                    CSV format: company_name,company_url<br>
                                    <a href="#" id="downloadSampleCsv">Download sample CSV</a>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Preview</label>
                                <div id="csvPreview" class="border rounded p-3" style="max-height: 200px; overflow-y: auto;">
                                    Select a CSV file to preview companies
                                </div>
                            </div>
                            <button type="button" class="btn btn-info btn-lg w-100" id="csvSubmitBtn" disabled>Process CSV Companies</button>
                        </div>

                        <!-- Progress Display -->
                        <div id="progressContainer" class="mt-4" style="display: none;">
                            <!-- Progress will be shown here -->
                        </div>
                    </div>
                </div>
                
                <div class="text-center mt-3">
                    <a href="/teardowns" class="btn btn-outline-secondary">View All Teardowns</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/static/js/main.js"></script>
</body>
</html>
